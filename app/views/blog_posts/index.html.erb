<h1>My Blog</h1>

<% @blog_posts.each do |blog_post| %>
    <div>
        <h2><%= link_to blog_post.title, blog_post %></h2>
        <% if blog_post.draft? %>
        <div class="p-2 rounded bg-gray-300 text-gray-500">Draft</div>
        <% elsif blog_post.scheduled? %>
        <div class="p-2 rounded bg-blue-300 text-blue-500">Scheduled</div>
        <% end %>
        <%= blog_post.body%>
    </div>
<% end %>